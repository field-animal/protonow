        <Expander Grid.Row="13"
                  x:Name="AlignExpander"
                  Visibility="Visible"
                  IsExpanded="True"
                  Style="{DynamicResource WidgetProStyle}">
            <Expander.Header>
                <TextBlock Text="{DynamicResource WidgetProp_Alignment}" />
            </Expander.Header>
            <Expander.Content>
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="7" />
                        <RowDefinition Height="auto" />
                    </Grid.RowDefinitions>
                    <StackPanel Orientation="Horizontal"
                                Grid.Row="1">
                        <StackPanel Orientation="Horizontal">
                            <ribbon:RibbonRadioButton Margin="0,0,0,2"
                                                      Command="cm:TextCommands.AlignTextLeft"
                                                      ToolTip="{DynamicResource WP_Tooltip_AlignLeft}"
                                                      IsChecked="{Binding IsTxtAlignLeft,Mode=OneWay}"
                                                      SmallImageSource="/Naver.Compass.Module.MainToolBar;component/ICON/icon-22-txt-left.png"
                                                      CommandTarget="{Binding CmdTarget}" />

                            <ribbon:RibbonRadioButton Margin="2,0,2,0"
                                                      Command="cm:TextCommands.AlignTextCenter"
                                                      ToolTip="{DynamicResource WP_Tooltip_AlignCenter}"
                                                      IsChecked="{Binding IsTxtAlignCenter,Mode=OneWay}"
                                                      SmallImageSource="/Naver.Compass.Module.MainToolBar;component/ICON/icon-22-txt-center.png"
                                                      CommandTarget="{Binding CmdTarget}" />

                            <ribbon:RibbonRadioButton Margin="2,0,2,0"
                                                      Command="cm:TextCommands.AlignTextRight"
                                                      ToolTip="{DynamicResource WP_Tooltip_AlignRight}"
                                                      IsChecked="{Binding IsTxtAlignRight,Mode=OneWay}"
                                                      SmallImageSource="/Naver.Compass.Module.MainToolBar;component/ICON/icon-22-txt-right.png"
                                                      CommandTarget="{Binding CmdTarget}" />
                        </StackPanel>
                        <StackPanel Orientation="Horizontal">
                            <ribbon:RibbonRadioButton Margin="2,0,2,0"
                                                      Command="cm:TextCommands.AlignTextTop"
                                                      ToolTip="{DynamicResource WP_Tooltip_AlignTop}"
                                                      IsChecked="{Binding IsTxtAlignTop,Mode=OneWay}"
                                                      SmallImageSource="/Naver.Compass.Module.MainToolBar;component/ICON/icon-22-txt-top.png"
                                                      CommandTarget="{Binding CmdTarget}" />

                            <ribbon:RibbonRadioButton Margin="2,0,2,0"
                                                      Command="cm:TextCommands.AlignTextMiddle"
                                                      ToolTip="{DynamicResource WP_Tooltip_AlignMiddle}"
                                                      IsChecked="{Binding IsTxtAlignMiddle,Mode=OneWay}"
                                                      SmallImageSource="/Naver.Compass.Module.MainToolBar;component/ICON/icon-22-txt-middle.png"
