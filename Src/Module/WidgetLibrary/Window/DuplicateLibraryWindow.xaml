<ctlBase:BaseWindow x:Class="Naver.Compass.Module.DuplicateLibraryWindow"
                    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:ctlBase="clr-namespace:Naver.Compass.Common;assembly=Naver.Compass.Common.ControlBase"
                    Title="{DynamicResource Libraries_DuplicateLibraryWindow_Title}"
                    Height="160"
                    Width="410"
                    WindowStartupLocation="CenterOwner"
                    Style="{StaticResource PopupWindow}">
    <Grid>
        <TextBlock Text="{DynamicResource Libraries_DuplicateLibraryWindow_Info}" 
                   Margin="35,20"
                   TextAlignment="Center"
                   TextWrapping="Wrap"/>
        <StackPanel Orientation="Horizontal"
                    HorizontalAlignment="Center"
                    Margin="0,0,0,20"
                    VerticalAlignment="Bottom">
            <Button Content="{DynamicResource Libraries_DuplicateLibraryWindow_Upgrade}"
                    Width="125"
                    Height="27"
                    Click="Upgrade_Click" />
            <Button Content="{DynamicResource Libraries_DuplicateLibraryWindow_AsNew}"
                    Width="125"
                    Margin="9,0,0,0"
                    Height="27"
                    Click="New_Click" />
        </StackPanel>
    </Grid>
</ctlBase:BaseWindow>
