    <Style  TargetType="{x:Type Custom:RibbonToggleButton}">
        <Style.Resources>
            <Thickness x:Key="{ComponentResourceKey ResourceId=LargeImageMargin, TypeInTargetAssembly={x:Type Custom:Ribbon}}">1,1,1,2</Thickness>
        </Style.Resources>
