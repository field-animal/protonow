<ResourceDictionary
    xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
    xmlns:s="clr-namespace:Naver.Compass.WidgetLibrary;assembly=Naver.Compass.WidgetLibrary.SystemWidgets"
    xmlns:local="clr-namespace:Naver.Compass.WidgetLibrary">


    <!--Target UI widget Data-Template for Previewing-->
    <DataTemplate DataType="{x:Type s:ButtonWidgetPreViewModel}">
        <Border Tag="{Binding Name}"  >
            <s:ButtonWidget Width="{Binding ItemWidth}"  Height="{Binding ItemHeight}" >                
            </s:ButtonWidget>
        </Border>        
    </DataTemplate>
    
    <DataTemplate DataType="{x:Type s:CircleWidgetPreViewModel}">
        <Border Tag="{Binding Name}" RenderTransformOrigin="0.5,0.5">
            <Border.RenderTransform>
                <RotateTransform Angle="{Binding RotateAngle}"  />
            </Border.RenderTransform>
            <s:CircleWidget Width="{Binding ItemWidth}"  Height="{Binding ItemHeight}">
            </s:CircleWidget>
        </Border>
    </DataTemplate>

